<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolBar"
    style="@style/ToolBarStyle">

    <TextView
        android:id="@+id/mTitleTv"
        style="@style/ToolbarTitleStyle"
        android:text="@string/imagePicker_title" />

    <FrameLayout
        android:id="@+id/mConfirmLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginEnd="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:foreground="@drawable/bg_foreground_corners3dp_selector">

        <TextView
            android:id="@+id/mConfirmTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_green_shape_3dp"
            android:gravity="center"
            android:minWidth="@dimen/toolbar_height"
            android:padding="@dimen/space_5"
            android:text="@string/imagePicker_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />
    </FrameLayout>
</androidx.appcompat.widget.Toolbar>