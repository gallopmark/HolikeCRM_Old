<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:orientation="vertical">

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_item_homepage_message_type"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/bg_btn_login_can_click_pressed"
            android:gravity="center"
            android:text="通知"
            android:textColor="@color/color_while"
            android:textSize="@dimen/textSize_12" />

        <TextView
            android:id="@+id/tv_item_homepage_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="售后订单收费确定售后订单收费确定售后订..."
            android:textColor="@color/textColor4"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_homepage_message_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="right|center"
        android:text="2018-04-12"
        android:textColor="@color/textColor11"
        android:textSize="@dimen/textSize_12" />
</LinearLayout>